while True:
    print("1. Addition")
    print("2. Subtraction")
    print("3. Exit")
    choice = int(input("Enter the operation u want to do: "))

    if choice == 1:
        a = int(input("Enter first number: "))
        b = int(input("Enter second number: "))
        print("Result:", a + b)
    elif choice == 2:
        a = int(input("Enter first number: "))
        b = int(input("Enter second number: "))
        print("Result:", a - b)
    elif choice == 3:
        break

    else:
        print("Invalid choice")
